<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aolanrewaju.layoutdemos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LinearLayoutActivity" android:parentActivityName=".MainActivity" android:label="@string/LinearLayout"/>
        <activity android:name=".RelativeLayoutActivity" android:parentActivityName=".MainActivity" android:label="@string/RelativeLayout"/>
        <activity android:name=".FrameLayoutActivity" android:parentActivityName=".MainActivity" android:label="@string/FrameLayout"/>
        <activity android:name=".ConstraintLayoutActivity" android:parentActivityName=".MainActivity" android:label="@string/ConstraintLayout"></activity>
    </application>

</manifest>